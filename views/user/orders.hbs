<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta property="og:title" content="Tarkeba perfume">
    <meta property="og:description"
        content="get the best Tarkeba's of the best perfumes, we can make a custom perfume for you.">
    <meta property="og:image" content="tarkeba-img/iconSocail.jpg">
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="600">
    <meta property="og:type" content="website">
    <title>Orders</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Kumbh+Sans:wght@300;400;700&display=swap">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="icon" href="/images/icon2.png">
    <link rel="stylesheet" href="/stylesheets/tarkeba.css">
    <link rel="stylesheet" href="/stylesheets/products.css">
    <link rel="stylesheet" href="/stylesheets/profile.css">
    <link rel="stylesheet" href="/stylesheets/cart.css">
    <link rel="stylesheet" href="/stylesheets/checkout.css">
</head>
<body>
    <!--header-->
    {{> header1}}
    <div class="body-container">
        <div class="divAddress">
            <!--user-order-->
            <div style="margin-bottom: 15px; width: 80%;">
                <div class="container-profile1">
                    <h4 style="font-weight: bold;">Orders:</h4>
                </div>
                {{#if orders}}
                <div>
                {{#each orders as |val index|}}
                <div style="box-shadow: 0 2px 10px 0 rgba(70, 76, 79, .2); border-radius: 5px 5px 0px 0px; padding: 20px; margin-bottom: 25px; border: 0px;">
                    <div class="order-header">
                        <div>
                            <p>Order ID: {{this._id}}</p>
                            <p>Ordered it on <span class="date" style="margin-left: 5px;">{{this.createdAt}}</span></p>
                        </div>
                        <a href="/users/orders/{{this._id}}" style="display: flex; align-items: center; color: black;">
                            <p style="margin-right: 10px; color: #4028df">View details</p>
                            <img id="plus" src="/images/admin-img/arrow.png" style="width: 12px; cursor: pointer; transform: rotate(-90deg); filter: invert(14%) sepia(100%) saturate(5217%) hue-rotate(251deg) brightness(87%) contrast(101%);">
                        </a>
                    </div>
                    <div style="display: flex; overflow: hidden;">
                    {{#each this.cart.selectedProduct as |val indexProduct|}}
                        <div style="display: flex; margin: 15px; padding-bottom: 10px; min-width: max-content; height: fit-content;">
                            <img src="/{{this.img}}" alt="{{this.name}}" style="width: 75px; border: 1px solid black"></a>
                            <div style="margin: 10px;">
                                <p style="font-weight: bold; color: black;">{{this.name}}</p>
                                <p>Size: {{this.size}}</p>
                                <p>Origin: {{this.origin}}</p>
                            </div>
                        </div>
                    {{/each}}
                    </div>
                </div>
                {{/each}}
                </div>
                {{else}}
                <p>You have not any orders.</p>
                {{/if}}
            </div>
        </div>
    </div>
    <!--footer-->
    {{> footer}}
    <script>
        let date = document.querySelectorAll(".date");
        date.forEach((date) => date.innerHTML = new Date(date.innerHTML).toLocaleDateString("en-us",{dateStyle: "medium"}));
    </script>
</body>