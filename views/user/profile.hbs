    <div class="body-container">
        <!--popups-->
        <div class="popup" id="popup-1">
            <div class="overlay"></div>
            <div class="content" id="contentPass">
                <div style="display: flex;">
                    <div class="close-btn" onclick="togglePopupName()">&times;</div>
                    <h2 style="color: #1E1926;">Change Your Name</h2>
                </div>
                <form action="changeName" method="POST" style="margin-top: 40px;">
                    <h6 style="text-align: left; color: #1E1926; margin-bottom: 5px; margin-left: 5%;">NEW USERNAME </h6>
                    <input type="text" class="change-inputs" name="newName" placeholder="New Username" id="new-name" required>
                    <input type="hidden" name="_csrf" value="{{token}}">
                    <div class="div-btns">
                        <input type="submit" class="btn change-btn" id="subNewEmail" value="Change">
                        <a class="btn cancel-btn" onclick="togglePopupName()">Cancel</a>
                    </div>
                </form>
            </div>
            <div class="content" id="contentPass2">
                <div style="display: flex;">
                    <div class="close-btn" onclick="togglePopupPassword()">&times;</div>
                    <h2 style="color: #1E1926;">Change Password</h2>
                </div>
                <form action="changePassword" method="post" style="margin-top: 40px;">
                    <h6 style="text-align: left; color: #1E1926; margin-bottom: 5px; margin-left: 5%;">OLD PASSWORD</h6>
                    <input type="password" name="oldPassword" class="change-inputs" placeholder="Old Password" id="old-pass">
                    {{#each passwordErrors}}
                        <div>
                            <p class="error" style="margin-bottom: 10px; margin-left: 5%;" id="changePassError1">{{this}}</p>
                        </div>                    
                    {{/each}}
                    <p id="wrongPass">The password that you've entered is incorrect.</p>
                    <h6 style="text-align: left; color: #1E1926; margin-bottom: 5px; margin-left: 20px;">NEW PASSWORD</h6>
                    <input type="password" name="newPassword" class="change-inputs" placeholder="New Password" id="new-pass">
                    {{#each newPassword}}
                        <div>
                            <p class="error" style="margin-bottom: 10px; margin-left: 5%;" id="changePassError2">{{this}}</p>
                        </div>                    
                    {{/each}}
                    <input type="password" name="confirmPass" class="change-inputs" placeholder="New Password Confirmation" id="confirm-pass">
                    {{#each confirmPassword}}
                        <div>
                            <p class="error" style="margin-bottom: 10px; margin-left: 5%;" id="changePassError3">{{this}}</p>
                        </div>                    
                    {{/each}}
                    <input type="hidden" name="_csrf" value="{{token}}">
                    <div class="div-btns">
                        <input type="submit" class="btn change-btn" id="subNewPass" value="Change">
                        <a class="btn cancel-btn" onclick="togglePopupPassword()">Cancel</a>
                    </div>
                </form>
            </div>
            <div class="content" id="contentPass3">
                <div style="display: flex;">
                    <div class="close-btn" onclick="togglePopupDeleteAccount()">&times;</div>
                    <h2 style="color: #1E1926;">Confirm Account Deletion</h2>
                </div>
                <form action="deleteAccount" method="post" style="margin-top: 40px;">
                    <p style="margin: 30px 0px 30px 0px;">Are you sure you want to delete your account?</p>
                    <div class="div-btns">
                        <input type="hidden" name="_csrf" value="{{token}}">
                        <input type="submit" class="btn change-btn" value="Delete Account">
                        <a class="btn cancel-btn" onclick="togglePopupDeleteAccount()">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
        <!--profile-->
        <div class="profile-detailes" style="margin-top: 40px;">
            <div>
                <div style="border-bottom: 1px solid #aaa; margin-bottom: 15px;">
                    <h4 style="font-weight: bold; margin-bottom: 10px;">Name:</h4>
                    <p style="margin-bottom: 5px; margin-top: 0px;" id="user-name">{{user.username}}</p>
                    <p style="color: #4028df; cursor: pointer; margin-bottom: 5px; width: 150px;" id="change-name" onclick="togglePopupName()">change name</p>
                </div>
                <div style="border-bottom: 1px solid #aaa; margin-bottom: 15px;">
                    <h4 style="font-weight: bold; margin-bottom: 10px;">Email:</h4>
                    <p style="margin-bottom: 15px; margin-top: 0px;" id="email">{{user.email}}</p>
                </div>
                <div style="border-bottom: 1px solid #aaa; margin-bottom: 15px;">
                    <h4 style="font-weight: bold; margin-bottom: 10px;">Password:</h4>
                    <p style="margin-bottom: 5px; margin-top: 0px;" id="password-email">********</p>
                    <p style="color: #4028df; cursor: pointer; margin-bottom: 15px; width: 160px;" id="change-pass" onclick="togglePopupPassword()">change password</p>
                </div>
            </div>
            <!--user-order-->
            <div style="border-bottom: 1px solid #aaa; margin-bottom: 15px;">
                <a href="/users/orders">
                    <div class="container-profile1">
                        <h4 style="font-weight: bold;">Orders:</h4>
                            <img id="plus" src="/images/admin-img/arrow.png" style="width: 12px; cursor: pointer; transform: rotate(-90deg);">
                    </div>
                </a>
            </div>
            <!--add address-->
            <div style="border-bottom: 1px solid #aaa; margin-bottom: 15px;">
